                                                 <div class="comment-meta">
                                                     <a href="#" class="post-author">@Html.DisplayFor(modelItem =>replie.user.username)</a>
                                                     <a href="#" class="post-date">April 15, 2018</a>
                                                     <p>@Html.DisplayFor(modelItem =>replie.content)</p>
                                                 </div>
                                             </div>
                                         </li>
                                        }
                                     </ol>
                                 </li>
                                 }
                             </ol>
