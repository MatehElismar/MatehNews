                                            <a href="#" class="post-like"><img src="~/newspaper-template/img/core-img/like.png" alt=""> <span>@Model.likesCount</span></a>
                                            <a href="#poster-comment" class="post-comment"><img src="~/newspaper-template/img/core-img/chat.png" alt=""> <span>@Model.commentsCount</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                         <!-- Comment Area Start -->
                         <a name="poster-comment"></a>
                         <div class="comment_area clearfix">
                              <div class="post-a-comment-area section-padding-80-0">
                             <h4>Deja un comentario</h4>
                             
                             <!-- Reply Form -->
                             <div id="poster-comment" class="contact-form-area">
                                 <form action="#" method="post">
                                     <div class="row"> 
                                         <div class="col-12">
                                             <textarea name="message" class="form-control" id="message" cols="30" rows="5" placeholder="Message"></textarea>
                                         </div>
                                         <div class="col-12 text-center">
                                             <a onclick="addComment()" class="btn newspaper-btn mt-30 w-100" type="submit">Submit Comment</a>
                                         </div>
                                     </div>
                                 </form>
                             </div>
                         </div>
                             <h5 class="title">@Model.comments.Count Comentarios</h5>
 
                             <ol id="comments-container">
                                 <!-- Single Comment Area -->
                                 @for (int i = 0; i < Model.comments.Count; i++)
                                 {
                                     var comment = Model.comments[i];
                                 <li class="single_comment_area">
                                     <!-- Comment Content -->
                                     <div class="comment-content d-flex">
                                         <!-- Comment Author -->
                                         <div class="comment-author">
                                             <img src="~/newspaper-template/img/bg-img/30.jpg" alt="author">
                                         </div>
                                         <!-- Comment Meta -->
                                         <div class="comment-meta">
                                             <a href="#" class="post-author">@Html.DisplayFor(modelItem => comment.user.username)</a>
                                             <a href="#" class="post-date">April 15, 2018</a>
                                             <p>@Html.DisplayFor(modelItem =>comment.content)</p>
                                         </div>
                                     </div>
                                     <div class="d-flex align-items-center post-like--comments">
                                             <a onclick="likeComment()" href="#" class="post-like"><img src="~/newspaper-template/img/core-img/like.png" alt=""> <span>Me Gusta</span></a>
                                             <a onclick="responseComment()" href="#poster-comment" class="post-comment"><img src="~/newspaper-template/img/core-img/chat.png" alt=""> <span>Responder</span></a>
                                         </div>
                                     <ol class="children">
                                        @for (int a = 0; a < comment.Replies.Count; a++)
                                        {
